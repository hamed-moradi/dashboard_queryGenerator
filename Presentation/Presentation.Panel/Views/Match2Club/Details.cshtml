@using Presentation.Panel.Models;
@using Presentation.Panel.Helpers;
@using Asset.Infrastructure.Common;

@model Match2ClubViewModel

@{
    ViewBag.Title = "مشخصات کلاب-مسابقه";
}
    <section class="content">
        <hr />
        <div>
            <dl class="dl-horizontal">

                <dt>
                    @{
                        var original = string.IsNullOrWhiteSpace(Model.MatchImage) ? "" : Model.MatchImage.Trim();
                        if (string.IsNullOrWhiteSpace(original))
                        {
                            original = "/Images/no-image.png";
                        }
                        var src = original + "?w=80&h=80&mode=crop";
                    }
                    <a href="@original" target="_blank" title="مشاهده تصویر در ابعاد واقعی">
                        <img class="avatar-mini" src="@src" width="80" height="80" alt="" />
                    </a>
                    <br /><br />
                </dt>

                <dd>

                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.MatchTitle)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.MatchTitle)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.HomeClubName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.HomeClubName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.HomeClubScore)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.HomeClubScore)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.AwayClubName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.AwayClubName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.AwayClubScore)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.AwayClubScore)
                </dd>

            </dl>

            <div class="form-actions no-color">
                @using (Html.BeginForm())
            {
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })@Html.HiddenFor(model => model.PreviousUrl)
                    @Html.AntiForgeryToken()
                    @*<input type="submit" value="حذف کن" class="btn btn-danger" />*@

                    @Html.Raw("&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;")
                    @Html.ActionLink("لیست کلاب-مسابقه ها", "Index", null, new { @class = "btn btn-default" })
                }
            </div>
        </div>
    </section>
