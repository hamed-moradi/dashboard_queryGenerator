@using Presentation.Panel.Models;
@using Presentation.Panel.Helpers;
@using Asset.Infrastructure.Common;
@model IEnumerable<ModuleViewModel>

<table class="table AdvancedGrid treeview">
    <tr>
        <th></th>
        <th>@Html.DisplayNameFor(model => model.Title)</th>
        <th>@Html.DisplayNameFor(model => model.Path)</th>
        <th>@Html.DisplayNameFor(model => model.ParentTitle)</th>
        <th>@Html.DisplayNameFor(model => model.StatusTitle)</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <i class="@(!string.IsNullOrWhiteSpace(item.Icon)?item.Icon:"fa fa-circle")"></i>&nbsp;&nbsp;
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td class="dirl text-right">
                @Html.DisplayFor(modelItem => item.Path)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.ParentTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusTitle)
            </td>
            <td>
                @Html.ActionLink("ویرایش", "Edit", new { id = item.Id }) |
                @Html.ActionLink("جزئیات", "Details", new { id = item.Id })
            </td>
        </tr>
    }
</table>
@Html.Partial("_PagedListPager", Model)